<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        android:elevation="@dimen/_5sdp"
        android:layout_margin="@dimen/_3sdp">

        <LinearLayout
            android:id="@+id/linearlayoutcategoryget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fff">
            <!-- android:layout_marginTop="@dimen/_5sdp"
             android:layout_marginLeft="@dimen/_1sdp"
             android:layout_marginRight="@dimen/_1sdp"
             android:layout_marginBottom="@dimen/_1sdp"
             >-->

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/mango3"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mango 1kg"
                    android:textStyle="bold"
                    android:textColor="#111111"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_20sdp"/>
                <TextView
                    android:id="@+id/product_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1kg"
                    android:textSize="@dimen/_14sdp"/>
                <TextView
                    android:id="@+id/mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MRP:150.00"
                    android:textSize="@dimen/_14sdp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ : 30.00"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_14sdp"/>

                    <Button
                        android:id="@+id/btn_add_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:text="Add"
                        android:textColor="#fff"
                        android:background="@drawable/addcart"
                        android:layout_marginLeft="@dimen/_40sdp"/>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_plus_minus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_40sdp"
                        >

                        <ImageView
                            android:id="@+id/iv_minus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/minus"
                            android:padding="@dimen/_3sdp"
                            android:layout_marginLeft="@dimen/_2sdp"/>

                        <TextView
                            android:padding="@dimen/_3sdp"
                            android:id="@+id/tv_count_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginLeft="@dimen/_5sdp"/>/>

                        <ImageView
                            android:padding="@dimen/_3sdp"
                            android:id="@+id/iv_plus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add"
                            android:layout_marginLeft="@dimen/_5sdp"/>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>