<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_white"
    tools:context=".ui.activity.Profile.Add_AddressActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@color/red"
        >

        <ImageView
            android:id="@+id/locback"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            app:srcCompat="@drawable/ic_left_arrow"
            android:layout_margin="@dimen/_5sdp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Choose location"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="20sp" />
    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_30sdp">


        <EditText
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/gray_corner"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Name"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp" />

        <EditText
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/et_lastname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:drawableLeft="@drawable/ic_user"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Last Name"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp" />


        <EditText
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/et_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Mobile"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp" />

        <EditText
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Email Id"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp" />

        <EditText
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Address"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp" />
        <EditText
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/et_addres_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Address2"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp" />
        <EditText
            android:windowSoftInputMode="stateAlwaysVisible"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:isScrollContainer="true"
            android:focusable="true"
            android:id="@+id/et_zipcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/gray_corner"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="@dimen/_10sdp"
            android:hint="Zipcode"
            android:inputType="number"
            android:padding="@dimen/_10sdp" />

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select city"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"

                />
            <Spinner
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/spinner_city"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select area"
                android:textColor="#000"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"

                />
            <Spinner
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/spinner_area"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Address image (optional)"
            android:textColor="@color/black"
            android:padding="@dimen/_10sdp" />


        <ImageView
            android:id="@+id/iv_address"
            android:background="@drawable/add_cart_border"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            />


        <Button
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/btn_add_address"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_margin="@dimen/_20sdp"
            android:background="@drawable/addcart"
            android:text="Submit"
            android:textColor="#fff" />


    </LinearLayout>

    </ScrollView>


</LinearLayout>